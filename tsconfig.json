{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@nba/core/*": [
        "app/core/*"
      ],
      "@nba/shared/*": [
        "app/shared/*"
      ],
      "@nba/features/*": [
        "app/features/*"
      ],
      "data": [
        "dist/data"
      ],
      "data/*": [
        "dist/data/*"
      ]
    }
  }
}
